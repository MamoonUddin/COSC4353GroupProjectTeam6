                <option value="Wyoming">Wyoming</option>
            </select>
            
            <label for="city"> City </label>
            <input type="text" id="city" name="city" Value= <%= address %>>
        
            <label for="zip"> Zipcode </label>
            <input type="text" id="zip" name="zip" Value= <%= zip %>>
            <input type="submit" value="Change Information">
        </form>
    </div>
    <div class= "container">
        <a href="/request">Transaction</a>
        <a href="/history">Transaction history</a>
        <a href="/logout">Log Out</a>
    </div>
</body>
</html>
